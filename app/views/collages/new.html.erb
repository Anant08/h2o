<h1>New collage</h1>

<% form_for(@collage) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :annotatable_type %><br />
    <%= f.text_field :annotatable_type %>
  </p>
  <p>
    <%= f.label :annotatable_id %><br />
    <%= f.text_field :annotatable_id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>
    <%= f.label :children_count %><br />
    <%= f.text_field :children_count %>
  </p>
  <p>
    <%= f.label :ancestors_count %><br />
    <%= f.text_field :ancestors_count %>
  </p>
  <p>
    <%= f.label :descendants_count %><br />
    <%= f.text_field :descendants_count %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :hidden %><br />
    <%= f.check_box :hidden %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

