<%= render :partial => 'shared/second_nav', :locals => { :nav_id => 'collage-logo',
  :url => collages_path,
  :right_search => 'collages/nav_search' } %>

<section id="breadcrumbs">
	<aside class="filter">
		<% if params[:tag] -%>
		<p>
		Collages tagged: <%= params[:tag] %> (<%= pluralize @collages.total, 'Collage' %> Total)
		<%= link_to "CLEAR TAG", collages_path %>
		</p>
		<% elsif params[:keywords] -%>
		<p>
		Results for: <%= params[:keywords] %> (<%= pluralize @collages.total, 'Collage' %> Total)
		<%= link_to "CLEAR SEARCH", collages_path %>
		</p>
		<% else -%>
    	<%= pluralize @collages.total, 'Collage' %> Total
		<% end -%>
	</aside>
	<aside class="pagination">
		<%= will_paginate @collages.hits, :container => false, :previous_label => 'Prev', :next_label => 'Next' %>
	</aside>
	<div class="cl"></div>
</section>

<section id="results">
	<hgroup id="collage_hgroup">
		<ul class="tabs">
			<li><a href="#" class="active" data-region="all_collages">ALL COLLAGES</a></li>
  			<% unless @my_collages.blank? %>
			<li><a href="#" data-region="my_collages">MY COLLAGES</a></li>
			<% end -%>
		</ul>
		<%= render :partial => 'shared/sort' %>
	</hgroup>
	<article class="songs">
  		<% unless @my_collages.blank? %>
		<ul id="my_collages" class="collage_section">
   	 		<%= render :partial => 'shared/objects/collage', :collection => @my_collages %>
		</ul>
  		<% end %>

		<ul id="all_collages" class="collage_section">
  		<% if @collages.hits.length == 0 %>
    	<li>None found.</li>
 	 	<% else %>
		<%= render :partial => 'shared/objects/collage', :collection => @collages.results %>
  		<% end %>
		</ul>
	</article>
</section>

<%= render :partial => "shared/popup", :locals => { :type => "collage" } %>
