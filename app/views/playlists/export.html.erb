<div id="playlist" class="singleitem" data-itemid="<%= @playlist.id %>">
	<hgroup class="description">
        <div class="Playlist-title scale1-5 vh1"><%= raw @playlist.name %></div>
	</hgroup>
    <p class="MsoToc1" id="toc-container"></p>
	<div class="details">
		<div id="description" class="item_description">
          <div class="Item-description">
			<%= raw @playlist.formatted(:description) %>
		  </div>
		</div>
	</div>
	<%= render :partial => 'playlist_items/playlist_items_block_print',
      :locals => {
        :playlist => @playlist,
        :playlist_items_limit => @playlist_items_limit,
      }
    %>

    <% if @playlist_items_limit && @playlist_items_count >= @playlist_items_limit %>
    <div id="playlist_items_limit_warning_end">
      <%= link_to "You've reached the bottom of your content preview. To load the rest in your browser, click here.", export_playlist_url(@playlist, load_all: 1)%>   <br/>
      (Large playlists may temporarily freeze your browser while loading.)
    </div>
    <%end%>
</div>
