<%
if controller.action_name == 'edit'
  item_object = PlaylistItem.find(params[:id]).resource_item
  item_body = ""
  url_string = ""
  container_id = ""
else
  item_object = ItemText.new
  item_body = body
end
-%>
<div id="error_block"></div>
  <% semantic_form_for item_object, :html => {:class => "playlist_form"} do |form| %>
  <% form.inputs do %>
        <%= form.input :output_text, :label => "Name", :as => :string, :input_html => {:class => "ui-widget-content ui-corner-all"} %>
        <li></li>
        <%= form.input :description,
          :input_html => {:size => '40x5', :class => "ui-widget-content ui-corner-all", :value => item_body,},
          :required => false
        %>
        <li></li>
        <%= form.input(:url, :as => :hidden, :value => params[:url_string]) %>
        <%= hidden_field_tag 'container_id', params[:container_id] %>
<% end -%>
<% end -%>
