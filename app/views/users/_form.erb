<%= form.label :login %><br />
<%= form.text_field :login %><br />
<br />
<%= form.label :attribution %><br />
<%= form.text_field :attribution %><br />
<br />
<%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
<%= form.password_field :password %><br />
<br />
<%= form.label :password_confirmation %><br />
<%= form.password_field :password_confirmation %><br />
<br />
<%= form.label :email_address %><br />
<%= form.text_field :email_address %><br />
<br />
<%= form.label :tz_name, "Timezone" %><br />
<%= form.time_zone_select :tz_name, ActiveSupport::TimeZone.us_zones, { :include_blank => true } %><br />
<br />
<% if form.object.new_record? -%>
<ul class="user_captcha">
<%= render :partial => 'shared/forms/captcha' %>
</ul>
<%= form.check_box :terms %>
I certify that I have read and agree to the <a href="/p/terms" target="_blank">Terms of Service</a>.
<br /><br />
<% end -%>
