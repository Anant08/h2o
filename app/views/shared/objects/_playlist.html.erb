<li class="listitem listitem<%= playlist.id %>" id="listitem_playlist<%= playlist.id %>" data-itemid="<%= playlist.id %>">
  <a href="#" class="tooltip list-icon icon icon-playlist" title="Playlist">Playlist</a>
  <div class="details">
    <h3>
      <%= link_to raw(playlist.name), playlist %>
      <% if current_user && (@is_admin[:playlist] || @my_belongings[:playlists].include?(playlist)) %>
      <%= link_to "DELETE", playlist_path(playlist), :class => "icon icon-delete tooltip", :title => "Delete", "data-type" => "playlist", "data-id" => playlist.id %>
      <% end -%>
    </h3>
    <p>
      <% if playlist.root != playlist -%>
      Original Creator: <%= raw playlist.root.owners.collect{|u| link_to(u.display, user_path(u)) }.join(',') if playlist.root.owners %> |
      Current Version: <%= raw playlist.owners.collect{|u| link_to(u.display, user_path(u)) }.join(',') if playlist.owners %> |
      <% else -%>
      <%= raw playlist.owners.collect{|u| link_to(u.display, user_path(u)) }.join(',') if playlist.owners %> |
      <% end -%>
      <%= number_with_delimiter(playlist.collage_word_count[0], :delimiter => ',') %> Words |
      <%= playlist.updated_at.strftime("%B %d, %Y") %>
      <% if false -%>Taught at [school] (if it hasn't been taught anywhere, don't display this field) <% end -%>
    </p>
  </div>

  <div class="right_details">
  <div class="barcode_outer">
  <%= render :partial => "shared/barcode", :locals => { :object => playlist } %>
  </div>
  <% if current_user -%>
  <div class="controls">
    <%= link_to raw('<span class="icon icon-read"></span>READ'), playlist, :class => "action read-action" %>
    <%= link_to raw('<span class="icon icon-remix"></span>REMIX'), prepare_copy_playlist_path(playlist), :class => "link-remix remix-action" %>
    <% if current_user && @my_belongings[:playlists].include?(playlist) %>
    <%= link_to raw('<span class="icon icon-push"></span>PUSH'), push_playlist_path(playlist), :class => "push-action" %>
    <% end -%>
    <a data-item_id="<%= playlist.id %>" data-bookmarktype="item_playlist" data-type="playlist" href="#" class="link-add"><span class="icon icon-add"></span>ADD</a>
    <%= link_to raw('<span class="icon icon-favorite"></span>BOOKMARK'), '#',
      :class => "link-bookmark bookmark-action", 
      "data-itemid" => playlist.id,
      "data-type" => "playlist" %>
  </div>
  <% end -%>
  </div>

  <div class="clear"></div>
</li>
