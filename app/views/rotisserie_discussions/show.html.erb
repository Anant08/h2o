<div id="spinner_block"></div>

<% if @rotisserie_discussion.user? %>
  <div id="list_block" class="ui-widget">
    <%= render :partial => 'rotisserie_posts/rotisserie_posts_block', :locals => {:rotisserie_discussion => @rotisserie_discussion} %>
  </div>

<% else %>
  <p>You are not currently a member of this discussion, would you like to become one?</p>
  <% link_to(add_member_rotisserie_discussion_path(@rotisserie_discussion), :style => "width: 200px; text-decoration: none;") do %>
    <div class="ui-button ui-state-default ui-corner-all" style="width: 200px; text-decoration: none;">
      Become a member
    </div>
  <% end %>


<% end %>



<br />

<div id="container_id" style="display: none;"><%= @rotisserie_discussion.id %></div>

<div id="dialog-post-reply" title="Reply to post"></div>
<div id="dialog-post-new" title="New post"></div>
<div id="dialog-post-edit" title="Edit post"></div>
<div id="dialog-post-delete" title="Delete post"></div>