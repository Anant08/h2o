#playlists_export, #collages_export, #text_blocks_export, 
#cases_export, #collages_export_unique {
  /* This is applied to dom elements that were H2 before we converted them to divs for the print export feature */
  .vh1, .vh2 { font-weight: bold; } 

  h1.off {
    color: red;
  }
  .annotator-adder {
    visibility: hidden !important;
    display: none !important;
  }
  .wrapper {
    max-width: 1000px;
    width: 1000px;
    margin-left: 70px;
    margin-top: 155px;  /* give more room for new print options */
  }
  background: #FFF;
  font-family: sans-serif;
  font-size: 11px;
  color: #000;
  border-bottom: 2px solid #FFF;
  * { 
    line-height: 1.4em;
    font-family: 'ff-dagny-web-pro';
    font-size: 14px;
  }
  .jsb-item {
    line-height: 2em;
  }
  #shell { background: #fff; }
  a { 
    color: #036290;
    text-decoration: none;
  }
  
  .singleitem {
    padding-top: 15px;
    float: none;
    width: 100%;
    div.article {
      padding-left: 0px;
      margin-top: 20px;
    }
    .details {
      background: none;
      padding: 0px;
      margin: 0px;
    }
    .scale0-8 {
      font-size: 11.2px;
    }
    .scale1-5 {
      font-size: 21px;
    }
    .scale1-3 {
      font-size: 18.2px;
    }
    .new-h1 {
      font-weight: bold;
      font-size: 21px; /* this is currently being overridden by the font size JS picker */
      x-padding: 0 0 6px 0;
    }
    .new-h2 {
      font-weight: bold;
      padding: 0 0 6px 0;
    }
  }
  
  /* Header */
  .collage-content > h1 { margin-top: 0px; padding: 0px 0px 4px 0px; }
  .no_visible_children { display: none; }
  
  /* Timestamp & Author */
  .collage-content .info { padding: 0px; font-weight: bold; }
  
  /* Description */
  #playlist .details { padding-bottom: 10px; }
  #playlist .item_description,
  .collage-content .item_description {
    font-style: normal;
    color: #000;
    background: none;
    padding: 0px;
  }
  
  /* Collage Content */
  .collage-content { padding-left: 50px; clear: both; }
  .collage-content p { margin-bottom: 20px; }
  .collage-content .annotation-content { color: #6B933D; font-style: italic; border: 1px solid #d4d4d4; padding: 2px 5px 2px 18px; margin: 3px;
  background: url(<%= asset_path 'asterisk.jpg' %>) 2px 1px no-repeat; text-indent: 10px; width: 500px; display: none; }
  .collage-content .annotation-ellipsis { padding-left: 5px; }
  .collage-content p,
  .collage-content center,
  .collage-content h2 { position: relative; }
  .collage-content .paragraph-numbering {
    position: absolute; 
    left: -50px;
    text-decoration: none;
    font-weight: normal;
  }
  .collage-content blockquote { padding-left: 30px; margin-left: 30px; }
  .collage-content blockquote .paragraph-numbering { left: -50px; }
  
  .playlists .collage-content div.article { position: relative; }
  
  #playlist .playlists .playlists { display: block; }
  #playlist .listitem { padding-bottom: 10px; }
  #playlist .listitem .notes { padding-bottom: 10px; }
  .playlist h3 { margin-bottom: 10px; }
  .playlist p { margin-bottom: 10px; }
  
  /* Text Block */
  #text_block { clear: both; }
  #text_block .details { font-style: italic; margin-bottom: 20px; }
  #text_block div.article p { margin-bottom: 20px; }
  
  /* Print */
  @media print {
    #toc_container {
      page-break-after: always;
    }
    /* Untested: page break before every top level playlist (maybe other objects too?)
    except for the first one
    */
    /*
    .playlist .level0:first-of-type {      page-break-before: never    }
    */
  }

  #export-form { display: flex; } /* temporary work around for form layout problem */

  #toc_container {
    padding-top: 20px;
    padding-bottom: 20px;
    font-weight: bold;
    font-size: 16px;
    #toc {
      .toc_level1 { padding-left: 0em; }
      .toc_level2 { padding-left: 1.5em; }
      .toc_level3 { padding-left: 3.0em; }
      .toc_level4 { padding-left: 4.5em; }
      .toc_level5 { padding-left: 5.0em; }
      .toc_level6 { padding-left: 6.5em; }
    }
    display: none;
  }
  #print-options {
    height: 140px;
    opacity: 0.0;
    background: transparent url(<%= asset_path 'quickbar.png' %>) bottom repeat-x;
    padding: 10px 5px 12px 5px;
    position: fixed;
    top: 0px;
    z-index: 1000;
    width: 100%;
    * {
      font-size: 12px;
    }
    select {
        height: 24px;
        min-width: 80px;
    }
    h2 {
      font-size: 14px;
      display: inline-block;
    }
    .jsb-currentItem {
      line-height: 1.8em;
    }
    > div {
      display: inline-block;
    }
    .jsb {
      width: 50px !important;
      display: inline-block;
      float: none;
      border: 1px solid #666;
      border-radius:4px; 
      -moz-border-radius:4px; 
      -webkit-border-radius:4px;
      -o-border-radius:4px;
      margin: 0px 10px 5px 0px;
    }
    .jsb-list {
      width: 60px !important;
    }
    strong {
      display: inline-block;
      margin: 0px 5px 0px 20px;
      font-weight: normal;
    }
    #fontface_div .jsb,
    #highlight_options .jsb {
      width: 110px !important;
    }
    #fontface_div .jsb-list,
    #highlight_options .jsb-list {
      width: 120px !important;
    }
    #fontsize_div .jsb {
      width: 60px !important;
    }
    #fontsize_div .jsb-list {
      width: 70px !important;
    }
    #export_format_options .jsb {
      width: 40px !important;
    }
    #export_format_options .jsb-list {
      width: 50px !important;
    }
    #toc_levels_options .jsb {
      width: 50px !important;
    }
    #toc_levels_options .jsb-list {
      width: 60px !important;
    }
  }

  .print_border { display: block; position: absolute; width: 100%; height: 100%; top:0px; left: 0px; }
  .print_border span { width: 100%; display: block; position: absolute; bottom: 0px; opacity: 0.0; }
  
  .annotator-outer { display: none; }
  .layered-ellipsis { display: none; margin: 0px 2px; cursor: default; }

  div.article {
    .annotator-wrapper {
      position: relative;
    }
  }
  h3.missing_item {
    .number {
      margin-right: 20px;
    }
    .missing_item {
      opacity: 0.6;
      font-weight: normal;
    }
  }
}

#text_blocks_export div.article ul {
  list-style-type: disc;
  margin: 0px 0px 10px 15px;
}

.annotator-wrapper .annotation-bar-indicator,
.annotator-wrapper .annotation-indicator {
  display: none;
}
.annotator-hl {
  font-size: inherit !important
}
