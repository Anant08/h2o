<div class="collage-index">
  <div class="info_block">
    <h1 class="yellow_title_med">Collages</h1>
    Collages allow you to annotate text - for instance, <%= link_to('a court case or decision', cases_url) %>. This page lists Collages you have the ability to view or manage.
  </div>

  <% unless @my_collages.blank? %>
    <div class="info_block">
      <h1 class="yellow_title_med">My Collages - <%= @my_collages.length %> total</h1>
    </div>
    <div class="list_block">
      <table class="core_table tablesorter">
        <thead>
          <tr class="table_heading">
            <th>Collage</th>
            <th>Annotations</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <%= render :partial => 'shared/objects/collage', :collection => @my_collages %>
        </tbody>
      </table>
    </div>
  <% end %>

  <h2>Showing <%= @collages.hits.length %> Collages of <%= @collages.total %> total</h2>
  <div class="list_block">
  <%= will_paginate @collages.hits %>
    <% unless request.xhr? %>
      <%= render :partial => 'shared/layout_components/per_page_selector' %>
    <% end %>
    <table class="core_table tablesorter">
      <thead>
        <tr class="table_heading">
          <th>Collage</th>
          <th>Annotations</th>
          <% if current_user %>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => 'shared/objects/collage', :collection => @collages.results %>
      </tbody>
    </table>
  <%= will_paginate @collages.hits %>
    <% unless request.xhr? %>
      <%= render :partial => 'shared/layout_components/per_page_selector' %>
    <% end %>
  </div>
  <div class="spacer_block"></div>
</div>
