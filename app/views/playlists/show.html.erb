<%= render :partial => 'shared/second_nav', :locals => { :nav_id => 'playlists-logo',
  :url => playlists_path,
  :right_search => 'playlists/nav_search' } %>

<div id="playlist_head_container">
  <div id="playlist_title" class="blue_title_large"><%= @playlist.name %> <button id="button-playlist-copy-<%= @playlist.id %>" name="button-playlist-copy" class="playlist_button ui-button ui-state-default ui-corner-all"><%= image_tag "/images/icons/page_copy.png" %></button></div>

  <%= raw (@playlist.description.blank?) ? '' : %Q|<div class="description">#{Playlist.format_content(@playlist.description)}</div>| %>
</div>

<div id="list_block" >
  <%= render :partial => 'playlist_items/playlist_items_block', :locals => {:playlist => @playlist} %>
</div>

<div id="container_id" style="display: none;"><%= @playlist.id %></div>

<% if current_user && (@playlist.admin? || @playlist.owner?) %>
  <div class="info_block">
    <%= link_to('Create Playlist Item',new_playlist_item_path, :class => 'button new-playlist-item') %>
  </div>
<% end %>

<div id="dialog-item-edit" title="Edit item"></div>
<div id="dialog-item-delete" title="Delete item"></div>
<div id="dialog-playlist-copy" title="Copy playlist"></div>
