<li id="question-<%= reply.id %>" class="reply<%= (reply.sticky) ? ' sticky' : '' %><%= (@updated_question_id == reply.id) ? ' updated' : '' %>">
  <%= h reply.question.to_s %>
  <span class="meta" style="float:right">
    <span class="replies"><%= link_to('reply to this', '#', :id => "new-question-for-#{reply.question_instance_id}-#{reply.id}", :class => 'new-question-for' ) %></span>
    <span class="user"><span>by</span> <%= reply.user.login %></span>
    <span class="datetime"><%= time_ago_in_words(reply.created_at) %> ago</span>
  </span>
  <% if reply.children.length > 0 %>
    <ul>
      <%= render :partial => 'shared/objects/reply', :collection => reply.children %>
    </ul>
  <% end %>
</li>
