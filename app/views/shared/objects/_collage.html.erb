<li class="listitem listitem<%= collage.id %>" data-itemid="<%= collage.id %>">
	<% if current_user %>
	<div class="controls">
  		<% form_tag(spawn_copy_collage_path(collage)) do %>
		<ul>
			<li class="link-copy"><a href="#">Copy</a></li>
			<li class="link-add"><a data-item_id="<%= collage.id %>" data-bookmarktype="item_collage" data-type="collage" href="#">Add</a></li>
		</ul>
  		<% end %>      
	</div>
  	<% end %>      
	<div class="details">
        <% cache "collage-#{collage.id}-tags" do %>
		<div class="tags">
			<ul>
				<% collage.tag_list.each do |tag| %>
				<li><%= link_to tag, collage_tag_path(CGI.escape(tag)) %></li>
				<% end -%>
			</ul>
		</div>
		<% end -%>
		<h4><%= link_to collage.name, collage_path(collage), :class => "title" %>
			<% if current_user && (@is_collage_admin || @my_collages.include?(collage)) %>
    		<%= link_to 'DELETE', collage, :class => "action delete-action" %>
  			<% end %>
		</h4>
        <% cache "collage-#{collage.id}-index" do %>
		<p>
			<%= collage.created_at.to_s(:simpledatetime) %> by
			<%= raw collage.creators.collect { |u| link_to(u.login, user_path(u)) }.join(',') %>
		</p>
		<p class="extra">
			On: "<%= link_to(collage.annotatable.display_name, collage.annotatable) %>
		</p>
        <% end -%>
	</div>
	<div class="cl"></div>
</li>
