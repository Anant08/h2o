<section id="search">
<% form_tag(url_for, :method => :get, :id => "search_all", :class => "search") do -%>
	<ul>
	<li class="field">
		<%= text_field_tag "keywords", params[:keywords], :size => 50 %>
	</li>
	<li class="submit">
		<input type="submit" class="submit" value="SEARCH" name="submit" />
	</li>
	</ul>
	<div id="radios">
		<p><input type="radio" name="searchtype" value="search" id="search_all_radio" />All</p>
		<p><input type="radio" name="searchtype" value="cases" />Cases</p>
		<p class="cl"><input type="radio" name="searchtype" value="playlists" />Playlists</p>
		<p><input type="radio" name="searchtype" value="question_instances" />Question Tool</p>
		<p class="cl"><input type="radio" name="searchtype" value="collages" />Collages</p>
		<p><input type="radio" name="searchtype" value="rotisseries" />Rotisseries</p>
		<div class="cl"></div>
	</div>
<% end -%>
</section>
