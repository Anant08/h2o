<label>SORT:</label>
<select>
	<% list.each do |s| -%>
		<option value="<%= s[1] %>" <%= raw 'selected="selected"' if s[1] == 'display_name' %>><%= s[0] %></option>
	<% end -%>
</select>
<div class="sort_ad">
  <a href="#" class="sort-asc active" title="Sort Ascending" data-val="asc"></a>
  <a href="#" class="sort-desc" title="Sort Descending" data-val="desc"></a>
</div>
