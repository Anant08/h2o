<div id="question-instance-list">
  <% unless @question_instances.blank? %>
    <h2>Please choose an existing question tool.</h2>
    <div class="clear"></div>
      <% if params[:updated] %>
        <div class="ui-state-highlight ui-corner-all">Updated!</div>
      <% end %>
      <table id="question-instance-chooser" class="tablesorter">
        <thead>
          <tr>
            <th>Name</th>
            <th>Questions</th>
            <th>Created</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% @question_instances.each do |question_instance| %>
            <tr>
              <td><%= link_to question_instance.name, question_instance %></td>
              <td><%= question_instance.question_count %></td>
              <td><%= question_instance.created_at %></td>
              <td>
                <% if current_user.has_role?(:owner, question_instance) %>
                  <%= link_to 'Edit', edit_question_instance_path(question_instance), :class=> "question-instance-control", :id => "edit-question-instance-#{question_instance.id}" %>
                  <%= link_to 'Destroy', question_instance, :confirm => 'Are you sure?', :method => :delete %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h2>OR</h2>
  <% else %>
    <h2>No question tools are currently active.</h2>
  <% end %>

  <div class="clear"></div>
  <h2><%= link_to 'Create a new question tool', new_question_instance_path, :class => 'question-instance-control' %></h2>
  <div id="question-instance-form-container" style="display:none;"></div>
</div>
