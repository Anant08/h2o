<div class="meta layers">
  <ul>
    <li>Annotations: <%= (collage_meta.annotations.blank?) ? 0 : collage_meta.annotations.length %></li>
    <%= 
      output = ''
      arep = collage_meta.layer_report
      arep.keys.each do |l|
        output += %Q|<li><span class="c#{l}">| + arep[l][:name] + %Q|</span>#{arep[l][:count]} words, #{arep[l][:annotation_count]} total</li>|
      end
      output
    %>
  </ul>
</div>
