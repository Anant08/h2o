<div id="text_block" class="singleitem" data-itemid="<%= @text_block.id %>">
  <div class="Item-title scale1-5 vh1" ><%= @text_block.display_name %></div>

  <div class="details">
    <div class="clear"></div>
    <% cache(["detail", @text_block], :compress => H2O_CACHE_COMPRESSION) do -%>
      <% if @text_block.metadatum -%>
        <%= render :partial => 'shared/objects/metadatum', :object => @text_block.metadatum %>
      <% end -%>
      <% end -%>
  </div>

  <div class="article">
    <%= raw @text_block.content %>
  </div>
</div>

